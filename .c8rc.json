{
  "reporter": ["text", "html", "json-summary"],
  "exclude": [
    "**/node_modules/**",
    "**/test/**",
    "**/*.test.js",
    "**/scripts/**",
    "**/database-schemas/**",
    "**/docs/**",
    "**/frontend/**"
  ],
  "include": [
    "**/*.js"
  ],
  "all": true,
  "check-coverage": false,
  "lines": 80,
  "functions": 80,
  "branches": 80,
  "statements": 80
}

