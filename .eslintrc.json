{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "WebSocketPair": "readonly",
    "AbortSignal": "readonly",
    "fetch": "readonly"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "no-constant-condition": ["error", { "checkLoops": false }]
  },
  "ignorePatterns": ["node_modules/", "coverage/", "frontend/"]
}

